{
    "compilerOptions": {
        "target": "es2019",
        "baseUrl": ".",
        "paths": {
            "@sds/tokens": [
                "../packages/tokens/src/index.ts"
            ]
        },
        "module": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}